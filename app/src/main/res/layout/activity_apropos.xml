<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NiveauActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/fond2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_info_gauche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_info_droite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_info_haut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_info_bas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Documentation"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@id/guideline_info_haut"
        app:layout_constraintLeft_toRightOf="@id/guideline_info_gauche"
        app:layout_constraintRight_toLeftOf="@id/guideline_info_droite"
        android:textStyle="bold"
        android:textColor="@color/blanc"
        android:shadowColor="@color/rouge"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        />

    <TextView
        android:id="@+id/tv_info_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En attente de la documentation \n du client"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_info"
        app:layout_constraintLeft_toRightOf="@id/guideline_info_gauche"
        app:layout_constraintRight_toLeftOf="@id/guideline_info_droite"
        android:textStyle="bold"
        android:textColor="@color/blanc"
        android:shadowColor="@color/rouge"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        />


</androidx.constraintlayout.widget.ConstraintLayout>